@model RazorVibes.Models.Product
@{
    ViewBag.Title = "Delete product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete product</h2>
<p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

@using (Html.BeginForm("DeleteConfirmed", "Products", new { id = Model.Id }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "button secondary" })
}
