@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Razor Vibes</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; background: #f5f5f5; }
        header { background: #1d1f27; color: #fff; padding: 16px 24px; }
        main { max-width: 960px; margin: 24px auto; background: #fff; padding: 24px; border-radius: 6px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 12px; border-bottom: 1px solid #e0e0e0; text-align: left; }
        a.button, button { display: inline-block; padding: 8px 12px; border-radius: 4px; border: none; background: #3a6df0; color: #fff; text-decoration: none; margin-right: 8px; }
        a.button.secondary { background: #5a5a5a; }
        a.button.danger, button.danger { background: #d63c3c; }
        form.inline { display: inline; }
        .field { margin-bottom: 12px; }
        .field label { display: block; font-weight: bold; margin-bottom: 4px; }
        .field input, .field textarea { width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; }
        .validation-summary-errors { color: #d63c3c; margin-bottom: 12px; }
    </style>
</head>
<body>
    <header>
        <h1>Razor Vibes Store Admin</h1>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>
