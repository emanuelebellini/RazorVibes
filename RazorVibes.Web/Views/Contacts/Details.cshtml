@model RazorVibes.Web.Models.Contact

@{
    ViewBag.Title = "Contact Details";
}

<h2>Contact Details</h2>

<div class="card">
    <dl>
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Notes</dt>
        <dd>@Model.Notes</dd>
        <dt>Created</dt>
        <dd>@Model.CreatedAt.ToString("f")</dd>
    </dl>
</div>

<p>
    <a class="button" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
    <a class="button button-secondary" href="@Url.Action("Index")">Back to list</a>
</p>
